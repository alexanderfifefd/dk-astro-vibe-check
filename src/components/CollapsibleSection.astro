---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="group border border-border rounded-lg">
  <summary class="flex items-center justify-between cursor-pointer px-6 py-4 text-sm font-medium hover:text-accent transition-colors list-none [&::-webkit-details-marker]:hidden">
    <span>{title}</span>
    <svg
      class="w-4 h-4 text-text-muted transition-transform group-open:rotate-180"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      <path d="M6 9l6 6 6-6" />
    </svg>
  </summary>
  <div class="px-6 pb-6 text-sm text-text-muted leading-relaxed">
    <slot />
  </div>
</details>
