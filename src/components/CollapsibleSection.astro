---
interface Props {
  title: string;
  variant?: 'box' | 'list';
}

const { title, variant = 'box' } = Astro.props;
---

<details class:list={[
  "group",
  variant === 'list' ? "" : "border border-border rounded-lg",
]}>
  <summary class:list={[
    "flex items-center justify-between cursor-pointer text-sm font-medium hover:text-accent transition-colors list-none [&::-webkit-details-marker]:hidden",
    variant === 'list' ? "py-4" : "px-6 py-4",
  ]}>
    <span>{title}</span>
    <svg
      class="w-4 h-4 text-text-muted transition-transform group-open:rotate-180 shrink-0 ml-2"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      <path d="M6 9l6 6 6-6" />
    </svg>
  </summary>
  <div class:list={[
    "text-sm text-text-muted leading-relaxed",
    variant === 'list' ? "pb-4 pt-1" : "px-6 pb-6",
  ]}>
    <slot />
  </div>
</details>
